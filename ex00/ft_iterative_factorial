#include <unistd.h>
int ft_iterative_factorial(int nb);
{
    int num, i, fact =1;
	
	i = num
	if (nb <= 0)
		fact = 1
		else
		{	
			i = 1;
		    while (i <= n)
			{
				fact = fact * i;
				putchar(i++);
			}
		    }
			return fact;
}

